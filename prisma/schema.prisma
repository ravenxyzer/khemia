generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userId  String
  balance Int?

  lastAttend     DateTime? @default(now())
  attendSum      Int?      @default(0)
  attendStreak   Int?      @default(0)
  attendPerMonth Int?      @default(0)

  @@unique([userId])
}
